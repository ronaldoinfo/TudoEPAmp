// Grid breakpoints
//
// Define the minimum dimensions at which your layout will change,
// adapting to different screen sizes, for use in media queries.

// scss-docs-start grid-breakpoints
$grid-breakpoints: (
  xs: 0,
  xsm: 321px, // refinamento necessário, a fim de melhorar o uso do "mixin" de breakpoints. Valor é em função de um tamanho diferenciado de dispositivos ainda menores ou iguais a um "Moto G4" por exemplo.
  xsl: 361px, // refinamento necessário, a fim de melhorar o uso do "mixin" de breakpoints. Valor é em função de um tamanho diferenciado de dispositivos ainda menores ou iguais a um "Moto G4" por exemplo.
  sm: 576px,
  md: 768px,
  // lg: 992px,
  lg: 1200px,
  // lg: 1350px,
  // xl: 1650px,
  xl: 1400px,
  // xl: 1200px
  // xxl: 1725px
  xxl: 1760px
) !default;

